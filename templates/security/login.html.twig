{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
<div class="min-h-[calc(100vh-var(--navbar-height))] flex items-center justify-center bg-base-200 p-4">
    <div class="card w-full max-w-sm bg-base-100 shadow-xl">
        <div class="card-body p-8 flex flex-col items-center">
            {% if app.user %}
                <div class="alert alert-info mb-6">
                    You are logged in as <strong>{{ app.user.userIdentifier }}</strong>, 
                    <a href="{{ logout_path() }}" class="link link-primary">Logout</a>
                </div>
            {% else %}
                <h1 class="card-title text-2xl mb-6">Connexion</h1>
            {% endif %}

            <form method="post" class="w-full max-w-xs flex flex-col gap-4">
                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}" data-controller="csrf-protection">

                <div class="form-control">
                    <label for="username" class="label">
                        <span class="label-text">Email</span>
                    </label>
                    <input 
                        type="email" 
                        value="{{ last_username }}" 
                        name="_username" 
                        id="username" 
                        class="input input-bordered w-full" 
                        autocomplete="email" 
                        required 
                        autofocus
                    >
                </div>

                <div class="form-control">
                    <label for="password" class="label">
                        <span class="label-text">Password</span>
                    </label>
                    <input 
                        type="password" 
                        name="_password" 
                        id="password" 
                        class="input input-bordered w-full" 
                        autocomplete="current-password" 
                        required
                    >
                </div>

                {#
                <div class="form-control">
                    <label class="label cursor-pointer justify-start gap-2">
                        <input type="checkbox" name="_remember_me" id="_remember_me" class="checkbox checkbox-primary">
                        <span class="label-text">Remember me</span>
                    </label>
                </div>
                #}

                {% if error %}
                    <div class="alert alert-error mb-6">
                        <svg xmlns="http://www.w3.org/2000/svg" class="stroke-current shrink-0 h-6 w-6" fill="none" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z"/></svg>
                        <span>{{ error.messageKey|trans(error.messageData, 'security') }}</span>
                    </div>
                {% endif %}

                <div class="form-control mt-6">
                    <button class="btn btn-primary w-full" type="submit">
                        Se connecter
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
{% endblock %}
