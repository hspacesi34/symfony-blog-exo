{% extends 'base.html.twig' %}

{% block title %}Mon Compte{% endblock %}

{% block body %}
<div class="min-h-[calc(100vh-var(--navbar-height))] bg-base-200 flex items-center justify-center py-10 px-4 sm:px-6 lg:px-8">
    <div class="card w-full max-w-md bg-base-100 shadow-2xl rounded-xl overflow-hidden">
        <div class="card-body items-center text-center p-8">
            <!-- Avatar -->
            <div class="avatar mb-6">
                <div class="w-32 rounded-full ring ring-primary ring-offset-base-100 ring-offset-2">
                    <img src="https://i.pravatar.cc/150?u={{ user.id }}" alt="{{ user.firstnameUser }} {{ user.nameUser }}">
                </div>
            </div>

            <!-- Name -->
            <h2 class="text-2xl font-bold mb-1">{{ user.firstnameUser }} {{ user.nameUser }}</h2>

            <!-- Email -->
            <p class="text-gray-500 mb-3">{{ user.emailUser }}</p>

            <!-- Account creation date -->
            <p class="text-sm text-gray-400 mb-4">
                Compte créé le : {{ user.createdAt.format('d/m/Y H:i') }}
            </p>

            <!-- Actions -->
            <div class="card-actions justify-center gap-4">
                <a href="{{ path('app_user_all') }}" class="btn btn-sm btn-primary">Retour à la liste</a>
            </div>
        </div>
    </div>
</div>
{% endblock %}
